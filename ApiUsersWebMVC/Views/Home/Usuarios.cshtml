<style>
    label {
        color: white;
        margin-left:430px;
    }
    .center{
        margin: 0 auto 0 auto;
    }
</style>
<div class="container">
    <div class="row">
        <div class="main col-12">
            <div class="progress">
                <div id="p" class="progress-bar  bg-info" role="progressbar" aria-valuenow="0" aria-valuemin="0" ariavaluemax="100"></div>
            </div>
            <div class="block1">
                <div id="b1" class="text-center activecirculo">
                    <i class="icon1"></i>
                </div>
            </div>
            <div id="block2A" class="block2">
                <div id="b2" class="text-center circulo">
                    <i class="icon2"></i>
                </div>
            </div>
            <div id="block3A" class="block3">
                <div id="b3" class="text-center circulo">
                    <i class="icon3"></i>
                </div>
            </div>
            <div class="text-center next">
                <button onclick="enviar()" id="next1" class="next1 btn btn-primary">Siguiente</button>
                <button onclick="enviar2()" id="next2" class="next2 btn btn-primary">Siguiente</button>
            </div>
        </div>
    </div>
    <div id="Paso1">
        <div class="form-group center">
            <label class="small mb-1" for="inputName">Nombre</label>
            <input class="form-control py-4 center" id="txtNombre" type="text" placeholder="Ingrese su nombre" />
        </div>
        <div class="form-group">
            <label class="small mb-1" for="inputApe">Apellido</label>
            <input class="form-control py-4 center" id="txtApellido" type="text" placeholder="Ingrese su apellido" />
        </div>
        <div class="form-group">
            <label class="small mb-1" for="inputPhone">Teléfono</label>
            <input class="form-control py-4 center" id="txtTelefono" type="number" placeholder="Ingrese su teléfono" />
        </div>
        <div class="form-group">
            <label class="small mb-1" for="inputEmail">Email</label>
            <input class="form-control py-4 center" id="txtEmail" type="email" placeholder="Ingrese su email" />
        </div>
    </div>

    <div id="Paso2" style="display:none">
        <div class="fieldset-content">
            <div class="form-group">
                <label class="small mb-1" style="" for="inputTipoTrámite">Tipo trámite</label>
                <input class="form-control py-4 center" id="txtTipoTramite" type="text" placeholder="Ingrese el tipo de trámite" />
            </div>
            <div class="form-group">
                <label class="small mb-1" for="inputCiudad">Ciudad</label>
                <input class="form-control py-4 center" id="txtCiudad" type="text" placeholder="Ingrese la ciudad" />
            </div>
        </div>
    </div>
    <div id="Paso3" style="display:none">
        <div class="fieldset-content">
            <input style="margin-bottom: 10px" type="button" value="Buscar" class=" btn btn-success" onclick="Redirigir()" />
        </div>
    </div>
</div>


@section scripts{

    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/Site.css" rel="stylesheet">
    <script src="~/Scripts/Wizard.js"></script>
    <script>
        function Redirigir() {
        
            nom = document.getElementById('txtNombre').value;
            ap = document.getElementById('txtApellido').value;
            tel = document.getElementById('txtTelefono').value;
            cor = document.getElementById('txtEmail').value;
            $.ajax({


                type: 'GET',
                url: '@Url.Action("Registrar", "Home")',
                data: {
                    'nombre': nom,
                    'apellido': ap,
                    'telefono': tel,
                    'email': cor
                },
                dataType: "json",
                success: function (response) {

                   
                },
            });
            window.location.href = '/Home/Index';
        }
 
    </script>
   
}